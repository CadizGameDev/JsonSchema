{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/ProjectData",
    "title": "Game Project",
    "definitions": {
        "ProjectData": {
            "type": "object",
            "properties": {
                "$schema": {
                    "type": "string",
                    "description": "The schema to verify this document against."
                },
                "id": {
                    "type": "string",
                    "description": "Unique Id for relative storage or changes",
                    "maxLength": 6
                },
                "title": {
                    "type": "string"
                },
                "team": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "url": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "name",
                            "url"
                        ],
                        "additionalProperties": false
                    }
                },
                "publishers": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "url": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "name",
                            "url"
                        ],
                        "additionalProperties": false
                    }
                },
                "inDevelopment": {
                    "type": "boolean"
                },
                "category": {
                    "description": "0 = Commercial, 1 = GameJam, 2 = Otros y 3 es reservado",
                    "$ref": "#/definitions/Cat"
                },
                "boxArt": {
                    "type": "string",
                    "description": "use a external url or relative to data/media/$id"
                },
                "genres": {
                    "type": "object",
                    "properties": {
                        "size": {
                            "type": "number"
                        }
                    },
                    "required": [
                        "size"
                    ],
                    "additionalProperties": false
                },
                "ytvideoid": {
                    "type": "string",
                    "description": "Just the youtube video id, Not the url"
                },
                "date": {
                    "type": "string",
                    "description": "Format YYYY/MM/DD"
                },
                "shortDescription": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "stores": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "recommeded `steam`, `itchio` and `playstore`"
                            },
                            "url": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "name",
                            "url"
                        ],
                        "additionalProperties": false
                    }
                },
                "screenshots": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "$schema",
                "id",
                "title",
                "team",
                "publishers",
                "inDevelopment",
                "category",
                "boxArt",
                "genres",
                "date",
                "shortDescription",
                "description",
                "stores",
                "screenshots"
            ],
            "additionalProperties": false
        },
        "Cat": {
            "type": "number",
            "description": "0 = Commercial, 1 = GameJam, 2 = Otros y 3 es reservado",
            "enum": [
                0,
                1,
                2,
                3
            ]
        }
    }
}